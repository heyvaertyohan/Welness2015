{% extends 'WellnessCoreBundle::layout_backend.html.twig' %}

{% block breadcrumb %}
    <li><a href="#">{{ 'Liste des images'|trans }}</a></li>
{% endblock %}

{% block titlepadding %}
    <h2>{{ 'Liste des images'|trans }}</h2>
{% endblock %}

{% block contentadmin %}

    <table class="table table-striped table-hover records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Position</th>
                <th>Type</th>
                <th>Path</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_image_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a href="{{ path('admin_image_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('admin_image_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_image_new') }}">
                <i class="icon-building">     {{ 'Ajouter'|trans }}</i>
            </a>
        </li>
    </ul>
    {% endblock %}
