{% extends 'WellnessCoreBundle::layout_frontend.html.twig' %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block title %}{{ parent() }} {{ 'accueil'|trans }} {% endblock %}

{% block header %}

    {{ parent() }}
{% endblock %}

{% block main %}

    {{ parent() }}
{% endblock %}

{% block maincontainer %}

    <div id="maincontener" class="background-white">
        <div class="row">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>{{ 'Liste des services'|trans }}</h2>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div cclass="table-responsive">
                                <table class="table table-striped table-bordered" id="table_responsive">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th>{{ 'Nom'|trans }}</th>
                                        <th>{{ 'Description'|trans }}</th>
                                        <th>{{ 'Mis en avant'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for image in listCategoryWithLogo %}
                                        <tr>
                                            <td class="center"><img src="{{ asset(image.path) }}"
                                                                    alt="{{ image.description }}"></td>
                                            <td>
                                                <a href="{{ path('wellness_public_category_show', {slug:image.categoryservice.slug}) }}">{{ image.categoryservice.name }}</a>
                                            </td>
                                            <td>{{ image.categoryservice.description }}</td>
                                            <td>{{ image.categoryservice.forward }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.col-lg-12 (nested) -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.service-->

        </div>

    </div>
{% endblock %}

{% block javascript %}

    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/wellnesscore/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/wellnesscore/js/dataTables.bootstrap.min.js') }}"></script>

    <script type="text/javascript" charset="utf-8">

        $(document).ready(function () {
            $('#table_responsive').dataTable();

        });

        $('.nav-tabs li ').click(function () {
            $('.table-bordered').dataTable();
        });
    </script>

    {#Ce script plante a son lancement et doit etre plac√© en dernier#}
    <script type="text/javascript" src="{{ asset('bundles/wellnesscore/js/superlist.js') }}"></script>




{% endblock %}