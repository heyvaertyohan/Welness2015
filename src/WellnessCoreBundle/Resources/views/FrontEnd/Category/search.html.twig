{% extends 'WellnessCoreBundle::layout_frontend.html.twig' %}

{% block title %}{{ parent() }} {{ 'recherche'|trans }} {% endblock %}

{% block header %}

    {{ parent() }}
{% endblock %}

{% block main %}

    {{ parent() }}
{% endblock %}

{% block maincontainer %}

    <div class="row">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>{{ 'Liste des services'|trans }}</h2>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="table_responsive">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>{{ 'Nom'|trans }}</th>
                                    <th>{{ 'Description'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {#{% if listCategoryWithLogo is defined  %}#}
                                    {% for service in listCategory %}
                                        <tr>
                                            {#<td class="center"><img class="logo" src="{{ asset(service.name.path) }}"
                                                                    alt="{{ image.alt }}"></td>
                                            <td>
                                                <a href="{{ path('public_category_show', {slug:image.categoryservice.slug}) }}">{{ image.categoryservice.name }}</a>
                                            </td>#}
                                            <td></td>
                                            <td><a href="{{ path('public_category_show',{slug:service.slug}) }}">{{ service.name }}</a> </td>
                                            <td>{{ service.description }}</td>
                                        </tr>
                                    {% endfor %}
                               {# {% endif %}#}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.col-lg-12 (nested) -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.service-->

    </div>

{% endblock %}

{% block javascript %}

    {{ parent() }}
    <script type="text/javascript"
            src="{{ asset('bundles/wellnesscore/libraries/bootstrap-sass/javascripts/bootstrap/carousel.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/wellnesscore/libraries/bootstrap-sass/javascripts/bootstrap/transition.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/wellnesscore/js/superlist.js') }}"></script>

{% endblock %}
