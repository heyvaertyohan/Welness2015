{% extends '::base.html.twig' %}

{% block head %}
    {{ parent() }}

            <link href="{{ asset('bundles/wellnesscore/css/superlist.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('bundles/wellnesscore/css/backend.css') }}" rel="stylesheet" type="text/css">

{% endblock %}
{% block title %}
    {{ parent() }} {{ 'Tableau de bord'|trans }}
{% endblock %}

{% block main %}

            <header class="header header-minimal">
                <div class="header-wrapper">
                    <div class="container">
                        <div class="header-inner">
                            <div class="header-logo">
                                <a href="{{ path('wellness_public_homepage') }}">
                                    <img src="{{ asset('bundles/wellnesscore/img/logo_bienetre.png') }}" alt="Logo">
                                </a>
                            </div>
                            <!-- /.header-logo -->
                            <div class="header-content">
                                <div class="header-bottom">
                                    <ul class="header-nav-primary nav nav-pills collapse navbar-collapse">
                                        <li>
                                            <a href="{{ path('wellness_public_homepage') }}">{{ 'Accueil'|trans }}<i
                                                        class="fa"></i></a>
                                        </li>

                                        <li>
                                            <a href="{{ path('wellness_public_provider_list') }}">{{ 'Prestataire'|trans }}<i
                                                        class="fa"></i></a>
                                        </li>

                                        <li>
                                            <a href="{{ path('wellness_public_category_list') }}">{{ 'Service '|trans }}<i
                                                        class="fa"></i></a>
                                        </li>

                                        <li>
                                            <a href="{{ path('wellness_public_training') }}">{{ 'Stage '|trans }}<i
                                                        class="fa"></i></a>
                                        </li>

                                        <li>
                                            <a href="{{ path('wellness_public_promo') }}">{{ 'Promo '|trans }}<i class="fa"></i></a>
                                        </li>

                                        <li>
                                            <a href="#">{{ 'Langue'|trans }} <i class="fa fa-chevron-down"></i></a>

                                            <ul class="sub-menu">
                                                <li>
                                                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}">FR
                                                    </a></li>
                                                <li>
                                                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">EN
                                                    </a></li>
                                            </ul>
                                        </li>

                                        <li>

                                            {% if app.user %}
                                                <a href="#">{{ app.user }} <i class="fa fa-chevron-down"></i></a>
                                                <ul class="sub-menu">
                                                    <li>
                                                        <a href="{{ path('wellness_admin_homepage') }}">{{ 'Tableau de bord'|trans }}</a>
                                                    </li>
                                                    <li>
                                                        <a href="#">{{ 'Mon profil'|trans }}</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('fos_user_security_logout') }}">{{ 'Se déconnecter'|trans }}</a>
                                                    </li>
                                                </ul>
                                            {% else %}
                                                <a href="#">{{ 'Connexion'|trans }} <i class="fa fa-chevron-down"></i></a>
                                                <ul class="sub-menu">
                                                    <li>
                                                        <a href="{{ path('fos_user_security_login') }}">{{ 'Se connecter'|trans }}</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('fos_user_change_password') }}">{{ 'S inscrire'|trans }}</a>
                                                    </li>
                                                </ul>
                                            {% endif %}
                                        </li>

                                    </ul>

                                    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse"
                                            data-target=".header-nav-primary">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                                <!-- /.header-bottom -->
                            </div>
                            <!-- /.header-content -->
                        </div>
                        <!-- /.header-inner -->
                    </div>
                    <!-- /.container -->
                </div>

                <div class="header-statusbar">
                    <div class="header-statusbar-inner">
                        <div class="header-statusbar-left">
                            <h1>{{ 'Tableau de bord'|trans }}</h1>

                            <div class="display-inline-block">
                                <div class="hidden-xs visible-lg">
                                    <div class="header-statusbar-search">
                                        <input type="text" class="form-control" placeholder="{{ 'Recherche...'|trans }}">
                                    </div>
                                    <!-- /.header-search -->
                                </div>
                            </div>
                        </div>
                        <!-- /.header-statusbar-left -->

                        <div class="header-statusbar-right">
                            <div class="hidden-xs visible-lg">
                                {{ 'Navigation'|trans }}
                                <ul class="breadcrumb">
                                    <li><a href="{{ path('wellness_admin_homepage') }}">{{ 'Bien-être'|trans }}</a></li>
                                    <li><a href="{{ path('wellness_admin_homepage') }}">{{ 'Tableau de bord'|trans }}</a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- /.header-statusbar-right -->
                    </div>
                    <!-- /.header-statusbar-inner -->
                </div>
                <!-- /.header-statusbar -->
            </header>
            <!-- /.header -->

            <div class="main">
                <div class="outer-admin">
                    <div class="wrapper-admin">
                        <div class="sidebar-secondary-admin">
                            <ul>
                                <li class="active">
                                    <a href="{{ path('wellness_admin_homepage') }}">
                                        <span class="icon"><i class="fa fa-tachometer"></i></span>
                                        <span class="title">{{ 'Tableau de bord'|trans }}</span>
                                        <span class="subtitle">Gérer votre site</span>
                                    </a>
                                </li>
                                <li>
                                    <a id="li_service" href="#">
                                        <span class="icon"><i class="fa fa-i-cursor"></i></span>
                                        <span class="title">{{ 'Services'|trans }}</span>
                                        <span class="subtitle">{{ 'Gérer les catégories de service'|trans }}</span>
                                    </a>

                                    <ul id="ul_service">
                                        <li>
                                            <a href="{{ path('wellness_admin_category_create') }}">{{ 'Ajouter un service'|trans }}</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('wellness_admin_category_list') }}">{{ 'Liste des services'|trans }}</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <!-- /.sidebar-secondary-admin -->

                        <div class="content-admin">
                            <div class="content-admin-wrapper">
                                <div class="content-admin-main">
                                    <div class="content-admin-main-inner">
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="page-title">
                                                                <h1>{{ 'Bienvenue'|trans }}</h1>
                                                            </div>
                                                            <!-- /.page-title -->


                                                            <div class="background-white p20 mb50">
                                                                <h2 class="page-title"></h2>

                                                                <form class="form-horizontal">
                                                                    <div class="form-group">

                                                                    </div>

                                                                    <div class="form-group">
                                                                        <div class="col-sm-offset-2 col-sm-10">
                                                                            <div class="checkbox">
                                                                                <input type="checkbox" id="remember-me">
                                                                                <label for="remember-me">Remember me</label>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                    <div class="form-group">
                                                                        <div class="col-sm-offset-2 col-sm-10">
                                                                            <button type="submit" class="btn btn-primary"><i
                                                                                        class="fa fa-sign-in"></i> Sign in
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                        <!-- /.col-* -->

                                                    </div>
                                                    <!-- /.row -->
                                                </div>
                                                <!-- /.col-* -->
                                            </div>
                                        </div>
                                        <!-- /.container-fluid -->
                                    </div>
                                    <!-- /.content-admin-main-inner -->
                                </div>
                                <!-- /.content-admin-main -->

                                <div class="content-admin-footer">
                                    <div class="container-fluid">
                                        <div class="content-admin-footer-inner">
                                            &copy; 2015 All rights reserved. Created by <a href="#">Aviators</a>.
                                        </div>
                                        <!-- /.content-admin-footer-inner -->
                                    </div>
                                    <!-- /.container-fluid -->
                                </div>
                                <!-- /.content-admin-footer  -->
                            </div>
                            <!-- /.content-admin-wrapper -->
                        </div>
                        <!-- /.content-admin -->
                    </div>
                    <!-- /.wrapper-admin -->
                </div>
                <!-- /.outer-admin -->
            </div>
            <!-- /.main -->

{% endblock %}


{% block footer %}

<!-- /.page-wrapper -->
<script type="text/javascript" src="{{ asset('bundles/wellnesscore/js/jquery.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/wellnesscore/js/backend.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/wellnesscore/js/dropdown.js') }}"></script>

{% endblock %}

