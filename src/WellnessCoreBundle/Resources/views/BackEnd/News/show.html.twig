{% block breadcrumb %}
    <li><a href="#">{{ 'News'|trans }} {{ entity.title }}</a></li>
{% endblock %}

{% block title %}
    {{ parent() }}
{% endblock %}


{% block contentadmin %}

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
