{% extends 'WellnessCoreBundle::layout_backend.html.twig' %}

{% block breadcrumb %}
    <li><a href="#">{{ 'Liste des news'|trans }}</a></li>
{% endblock %}

{% block titlepadding %}
    <h2>{{ 'Liste des news'|trans }}</h2>
{% endblock %}

{% block contentadmin %}

<table class="table table-striped table-hover records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Createat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('news_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createat %}{{ entity.createat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('news_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('news_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('news_new') }}">
                <i class="icon-building">     {{ 'Ajouter'|trans }}</i>
            </a>
        </li>
    </ul>
    {% endblock %}
