<div class="well">
    <form action="#" method="post">

        <div class="form-group">
            <label for="InputTextId">Id</label>
            <input type="text" class="form-control" id="InputTextId" placeholder={{ "Id"|trans }} value={{ CurrentCategory.id }} readonly>
        </div>

        <div class="form-group">
            <label for="InputTextLogo">Logo</label>
            <br/>
            <img class="logo" id="InputTextLogo" src="{{ asset(CategoryWithLogo[0].path) }}"
                 alt="{{ CategoryWithLogo[0].path }}">
        </div>

        <div class="form-group">
            <label for="InputTextName">{{ "Nom"|trans }}</label>
            <input type="text" class="form-control" id="InputTextName" placeholder={{ "Nom"|trans }} value={{ CurrentCategory.name }} readonly>
        </div>

        <div class="form-group">
            <label for="InputTextDescription">{{ "Description"|trans }}</label>
            <textarea class="form-control"  rows="5" id="InputTextDescription" placeholder="Description" readonly>{{ CurrentCategory.description }}</textarea>
        </div>

        <div class="form-group">
            <div class="checkbox">
                <input type="checkbox" id="yesterday" {% if CurrentCategory.forward  %} checked {% endif %} disabled ><label for="yesterday">{{ "Mis en avant" }}</label>
            </div>
        </div>

        <input type="submit" class="btn btn-primary" onclick="{{ path('wellness_admin_category_update', {slug:CurrentCategory.slug}) }}" value="{{ 'Modifier'|trans }}"></input>

    </form>
</div>

