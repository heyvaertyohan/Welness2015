{% extends 'WellnessCoreBundle::layout_backend.html.twig' %}

{% block breadcrumb %}
    <li><a href="#">{{ 'Liste de service'|trans }}</a></li>
{% endblock %}

{% block contentadmin %}
    <div class="container">
        <div class="row">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>{{ 'Liste des services'|trans }}</h2>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div cclass="table-responsive">
                                <table class="table table-striped table-bordered" class="logo">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th>{{ 'Nom'|trans }}</th>
                                        <th>{{ 'Description'|trans }}</th>
                                        <th>{{ 'Mis en avant'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for image in listCategoryWithLogo %}
                                        <tr>
                                            <td class="center"><img class="logo" src="{{ asset(image.path) }}"
                                                                    alt="{{ image.description }}"></td>
                                            <td>
                                                <a href="{{ path('wellness_admin_category_show', {slug:image.categoryservice.slug}) }}">{{ image.categoryservice.name }}</a>
                                            </td>
                                            <td>{{ image.categoryservice.description }}</td>
                                            <td>{{ image.categoryservice.forward }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.col-lg-12 (nested) -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.service-->

        </div>

    </div>
{% endblock %}

