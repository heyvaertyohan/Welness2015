{% extends 'WellnessCoreBundle::layout_backend.html.twig' %}

{% block breadcrumb %}
    <li>{{ 'Liste des utilisateurs'|trans }}</li>
{% endblock %}

{% block titlepadding %}
    <h2>{{ 'Liste des utilisateurs'|trans }}</h2>
{% endblock %}

{% block contentadmin %}

    <table class="table table-striped table-hover records_list">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Nom utilisateur'|trans }}</th>
                <th>{{ 'Adresse email'|trans }}</th>
                <th>{{ 'Type utilisateur'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.usertype }}</td>
                <td>
                    <a href="{{ path('admin_user_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_user_new') }}">
                <i class="icon-building">     {{ 'Ajouter'|trans }}</i>
            </a>
        </li>
    </ul>
    {% endblock %}
