{% extends 'WellnessCoreBundle::layout_backend.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('admin_user') }}">{{ 'Liste news'|trans }}</a></li>
    <li>{{ entity.name }}</li>
{% endblock %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block titlepadding %}
    <h2>{{ 'Utilisateur'|trans }} {{ entity.name }}</h2>
{% endblock %}


{% block contentadmin %}
    <h1>User</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Nom'|trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'Numéro téléphone'|trans }}</th>
                <td>{{ entity.telnumber }}</td>
            </tr>
            <tr>
                <th>{{ 'Rue'|trans }}</th>
                <td>{{ entity.addressstreet }}</td>
            </tr>
            <tr>
                <th>{{ 'Numéro'|trans }}</th>
                <td>{{ entity.addressnumber }}</td>
            </tr>
            <tr>
                <th>{{ 'Confirmation inscription'|trans }}</th>
                <td>{{ entity.inscriptioncf }}</td>
            </tr>
            <tr>
                <th>{{ 'Type utilisateur'|trans }}</th>
                <td>{{ entity.usertype }}</td>
            </tr>
            <tr>
                <th>{{ "Nombre d'essaie"|trans }}</th>
                <td>{{ entity.tryingnumber }}</td>
            </tr>
            <tr>
                <th>{{ 'Banni'|trans }}</th>
                <td>{{ entity.bamed }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_user') }}">
            <i class="icon-backward"> </i> {{ 'Retour à la liste'|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
            <i class="icon-edit"> </i> {{ 'Editer'|trans }}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
