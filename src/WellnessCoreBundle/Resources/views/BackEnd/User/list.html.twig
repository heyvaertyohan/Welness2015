{% extends 'WellnessCoreBundle::layout_backend.html.twig' %}

{% block breadcrumb %}
    <li><a href="#">{{ 'Liste des services'|trans }}</a></li>
{% endblock %}

{% block contentadmin %}
    <div class="container">
        <div class="row">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>{{ 'Liste des utilisateurs'|trans }}</h2>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div cclass="table-responsive">
                                <table class="table table-striped table-bordered" id="table_responsive">
                                    <thead>
                                    <tr>
                                        <th class="center">{{ 'Id'|trans }}</th>
                                        <th class="center">{{ 'Nom utilisateur'|trans }}</th>
                                        <th class="center">{{ 'Nom'|trans }}</th>
                                        <th class="center">{{ 'Email'|trans }}</th>
                                        <th class="center">{{ 'Type'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in listUsers %}
                                        <tr>
                                            <td class="center">{{ user.id }}</td>
                                            <td>
                                                <a href="{{ path('wellness_admin_user_show', { slug:user.slug } )}}">{{ user.username }}</a>
                                            </td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.name }}</td>
                                            <td>{{ user.email }}</td>
                                            <td>{{ user.usertype }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.col-lg-12 (nested) -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.user-->

        </div>

    </div>
    <!-- /.content-admin -->
{% endblock %}

