    </tr>
    <tr>
        <th>Position</th>
        <td>{{ entity.position }}</td>
    </tr>
    <tr>
        <th>Type</th>
        <td>{{ entity.type }}</td>
    </tr>
    <tr>
        <th>{{ 'Chemin'|trans }}</th>
