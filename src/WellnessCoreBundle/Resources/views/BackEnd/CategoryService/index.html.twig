{% extends 'WellnessCoreBundle::layout_backend.html.twig' %}

{% block breadcrumb %}
    <li>{{ 'Liste des services'|trans }}</li>
{% endblock %}

{% block titlepadding %}
    <h2>{{ 'Liste des services'|trans }}</h2>
{% endblock %}

{% block contentadmin %}

    <table class="table table-striped table-hover records_list">
        <thead>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <th>{{ 'Nom'|trans }}</th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>
                    <a href="{{ path('admin_categoryservice_show', { 'slug': entity.slug }) }}">
                        <i class="icon-book"></i></a>
                    <a href="{{ path('admin_categoryservice_edit', { 'slug': entity.slug }) }}">
                        <i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('admin_categoryservice_new') }}">
                <i class="icon-building">     {{ 'Ajouter'|trans }}</i>
            </a>
        </li>
    </ul>

{% endblock %}




