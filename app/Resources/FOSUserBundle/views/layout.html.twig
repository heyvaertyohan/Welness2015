{% extends 'WellnessCoreBundle::layout_frontend.html.twig' %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/wellnesscore/css/login.css') }}"/>
{% endblock %}

{% block main %}

    <body>

    <div class="main">
        <div class="main-inner">
            <div class="container">
                <div class="content">
                    <div class="row">
                        <div id="myloginform" class="col-sm-4 col-sm-offset-4">
                            {% if app.request.hasPreviousSession %}
                                {% for type, messages in app.session.flashbag.all() %}
                                    {% for message in messages %}
                                        <div class="flash-{{ type }}">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}
                            {% endif %}

                            {% block fos_user_content %}
                            {% endblock fos_user_content %}

                        </div>
                    </div>
                    <!-- /.row -->

                </div>
                <!-- /.content -->
            </div>
            <!-- /.container -->
        </div>
        <!-- /.main-inner -->
    </div>
    <!-- /.main -->
    </body>
{% endblock %}